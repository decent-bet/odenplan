{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "lib",
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "examples",
        "tests",
        "dist"
    ],
    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "theme": "markdown"
    }
}